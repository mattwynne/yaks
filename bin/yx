#!/usr/bin/env bash

YAK_DIR="${YAK_PATH:-.yaks}"
YAKS_FILE="$YAK_DIR/yks"

show_help() {
  cat <<EOF
Usage: yx <command> [arguments]

Commands:
  add <name>    Add a new yak
  list, ls      List all yaks
  --help        Show this help message
EOF
}

case "$1" in
  --help)
    show_help
    ;;
  "")
    show_help
    ;;
  add)
    if [ -z "$2" ]; then
      # Interactive mode
      echo "Enter yaks (empty line to finish):"
      mkdir -p "$YAK_DIR"
      while IFS= read -r line; do
        if [ -z "$line" ]; then
          break
        fi
        echo "$line" >> "$YAKS_FILE"
      done
    else
      # Single yak mode
      mkdir -p "$YAK_DIR"
      echo "$2" >> "$YAKS_FILE"
    fi
    ;;
  list|ls)
    if [ -f "$YAKS_FILE" ]; then
      sed 's/^/- [ ] /' "$YAKS_FILE"
    else
      echo "You have no yaks. Are you done?"
    fi
    ;;
  *)
    echo "You have no yaks. Are you done?"
    ;;
esac
